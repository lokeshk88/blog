<div class="container">
<div align="center"> 
<h1><%= @article.title %></h1>
<p><%= @article.content %></p>


<%if user_signed_in?%>
      <%= link_to "Edit", edit_article_path(@article),class:"btn btn-success" %> | <%= link_to "Destroy", article_path(@article),class:"btn btn-danger" ,data: { turbo_method: :delete, turbo_confirm: "Are you sure ?"} %>
  </div>
<%end%>
</div>

<div>
  <h2>Comments</h2>

    <div class="container">
    <%= render 'comments/form' %>

    <div class="card" style="width:70%">
      <p><%= render @article.comments%></p>
      <br>
    </div>

  </div>
</div>